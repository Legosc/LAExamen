@model IEnumerable<Examen.Models.Invoice>

@{
    ViewBag.Title = "Index";
}
<h2 class="page-header">
    <a class="btn btn-primary pull-right" href="~/Invoices/Create">Nueva Factura</a>
    Comprobantes
</h2>

<table class="table">
    <tr>
        <th>
            Cliente
        </th>
        <th>
            Total Facturado
        </th>
        <th>
            Fecha
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Contact.Name)
        </td>
        <td class="text-right">@string.Format("{0:c}", item.Total)</td>
        <td class="text-right">@item.Creado.ToString("dd-MM-yyyy")</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
