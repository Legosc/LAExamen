@model IEnumerable<Proyecto.Models.Employee>

@{
    ViewBag.Title = "Empleados";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
          Nombre
        </th>
        <th>
           Activo
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Contact.Name)
        </td>
        <td>
            @Html.CheckBoxFor(modelItem => item.Actived, new { @type = "checkbox", @disabled = "disabled" })
            <label for="Actived"></label>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
